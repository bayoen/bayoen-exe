<Border x:Class="bayoen.Windows.Layouts.StatusBorder"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mtc="http://metro.mahapps.com/winfx/xaml/controls"
            xmlns:layout="clr-namespace:bayoen.Windows.Layouts"
            xmlns:content="clr-namespace:bayoen.Windows.Contents">
    <Grid>
        <ProgressBar x:Name="IndeterminateBar" Height="28" BorderThickness="0" IsIndeterminate="True" Opacity="0.5" VerticalAlignment="Center" Visibility="Collapsed"/>
        <mtc:MetroProgressBar x:Name="StatusBar" Height="28" BorderThickness="0" Opacity="0.5" Value="100" VerticalAlignment="Center"/>
        <TextBlock x:Name="StatusTextBlock" Foreground="White" VerticalAlignment="Center" Padding="8,0,8,2" FontSize="14"/>
        <TextBlock x:Name="VersionTextBlock" Foreground="LightGray" VerticalAlignment="Center" Padding="8,0,8,2" FontSize="14" HorizontalAlignment="Right"/>
    </Grid>
</Border>