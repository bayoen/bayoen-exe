<mtc:MetroWindow x:Name="Dashboard"
                 x:Class="bayoen.Windows.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mtc="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="bayoen~"
                 TitleCharacterCasing="Normal"
                 WindowStartupLocation="CenterOwner"
                 WindowTitleBrush="Transparent"
                 ShowIconOnTitleBar="False"
                 BorderThickness="0"
                 Height="300" MinHeight="150"
                 Width="400" MinWidth="150"
                 
                 Closing="Dashboard_Closing">
    <ScrollViewer>
        <TextBlock x:Name="TextOut" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </ScrollViewer>
</mtc:MetroWindow>
